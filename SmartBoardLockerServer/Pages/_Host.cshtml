@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SmartBoardLockerServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Types.ServerConfiguration Config

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <base href="~/" />
    <link href="https://cdn.jsdelivr.net/npm/beercss@3.4.9/dist/cdn/beer.min.css" rel="stylesheet">
    <script type="module" src="https://cdn.jsdelivr.net/npm/beercss@3.4.9/dist/cdn/beer.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <header>
        <nav>
            <button class="circle transparent">
                <i>menu</i>
            </button>
            <h5 class="max center-align">@Config.SchoolName</h5>
            <button class="circle transparent">
                <img class="responsive" src="@Config.SchoolIconURL">
            </button>
        </nav>
    </header>
    <main class="responsive">
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </main>
</body>
</html>
